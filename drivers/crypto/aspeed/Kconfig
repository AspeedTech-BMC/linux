config CRYPTO_DEV_ASPEED
	tristate "Support for ASPEED Hash & Crypto Engice (HACE)"
	depends on ARCH_ASPEED
	select CRYPTO_CBC
	select CRYPTO_ECB
	select CRYPTO_AES
	select CRYPTO_MD5
	select CRYPTO_SHA256
	select CRYPTO_SHA512
	select CRYPTO_HMAC
	select CRYPTO_ALGAPI
	select CRYPTO_BLKCIPHER
	select CRYPTO_BLKCIPHER2
	  help
	    Say 'Y' here to use the AST Hash & Crypto Engine (HACE)

config CRYPTO_DEV_ASPEED_ABLK_INT
        bool "Enable Ablkcipher Interrupt"
        depends on CRYPTO_DEV_ASPEED
        default y

config CRYPTO_DEV_ASPEED_AKCIPHER_INT
        bool "Enable Akcipher Interrupt"
        depends on CRYPTO_DEV_ASPEED
        default y

config CRYPTO_DEV_ASPEED_AHASH_INT
        bool "Enable Ahash Interrupt"
        depends on CRYPTO_DEV_ASPEED
        default y

config CRYPTO_DEV_ASPEED_KPP_INT
        bool "Enable Kpp Interrupt"
        depends on CRYPTO_DEV_ASPEED
        default y